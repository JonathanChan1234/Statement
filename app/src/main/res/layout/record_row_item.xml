<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/purpose_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/entertainmenticon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/purpose_info"
        android:text="CDC"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/description_info"/>

    <TextView
        android:id="@+id/amount_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/time_info"
        android:layout_marginRight="5dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="$333"/>
    <TextView
        android:id="@+id/time_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="2018-8-8 19:20:33"/>

</RelativeLayout>
